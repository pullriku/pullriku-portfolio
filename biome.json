{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    
    "linter": {
        "rules": {
            "suspicious": {
                "noUnknownAtRules": "off"
            }
        }
    },

    "overrides": [
        {
            "includes": ["**/*.svelte", "**/*.astro", "**/*.vue"],
            "linter": {
                "rules": {
                    "style": {
                        "useConst": "off",
                        "useImportType": "off"
                    },
                    "correctness": {
                        "noUnusedVariables": "off",
                        "noUnusedImports": "off"
                    }
                }
            }
        }
    ]
}
