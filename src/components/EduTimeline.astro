---
type Event = {
	year: string;
	title: string;
	desc: string;
	color: string;
};
const events: Event[] = [
	{
		year: "2022",
		title: "近畿大学情報学部情報学科に入学",
		desc: "コンピュータサイエンスの基礎を学び始めました。",
		color: "bg-sky-400",
	},
	{
		year: "2024",
		title: "大規模情報処理システム研究室に配属",
		desc: "eBPFを使ってシステム負荷の監視を行う研究を始めました。",
		color: "bg-sky-600",
	},
	{
		year: "2026(予定)",
		title: "近畿大学情報学部情報学科を卒業予定",
		desc: "また、近畿大学大学院情報学研究科に進学予定です。",
		color: "bg-sky-800",
	}
];
---

<section class="relative border-l-4 border-sky-300 pl-8 max-w-2xl mx-auto">
	<div class="h-8" />
	{
		events.map((event) => (
			<div class="mb-12 relative">
				<span
					class={`absolute -left-11 top-1 w-5 h-5 ${event.color} rounded-full border-4 border-[#F1DFBC]`}
				></span>
				<h3 class="text-xl font-semibold text-gray-800">
					{event.year} — {event.title}
				</h3>
				<p class="text-gray-600 mt-1">{event.desc}</p>
			</div>
		))
	}
</section>
