    <div class="mt-6 flex flex-wrap gap-3">
        {["Python", "Rust", "Docker", "Astro", "Tailwind", "Cloudflare"].map((s) => (
        <span class="rounded-full bg-sky-200/70 px-4 py-2 text-slate-800 shadow">
            {s}
        </span>
        ))}
    </div>
    </div>
</section>
