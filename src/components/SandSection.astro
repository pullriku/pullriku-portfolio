<section class="bg-[#F8F4E6]">
    <div class="mx-auto max-w-5xl px-6 pt-8 pb-16">
    <h3 class="text-3xl font-bold text-slate-800">Works</h3>
    <div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {[
        { title: "MEC QoE Optimizer", emoji: "🐚" },
        { title: "Avocado Analyzer", emoji: "🥑" },
        { title: "Portfolio", emoji: "🎨" },
        ].map((w) => (
        <article
            class="rounded-2xl bg-white/80 p-5 shadow-md ring-1 ring-black/5 transition hover:-translate-y-1 hover:shadow-xl"
