---
import { Image } from "astro:assets";

type Props = {
	title: string;
	image?: ImageMetadata;
};

const { title, image } = Astro.props;
---

<article
  class="rounded-2xl border bg-black/50
         backdrop-blur-sm shadow-lg 
         border-white/10"
>

  <div class="px-5 pt-5 md:px-6 md:pt-6">
    <h2 class="text-3xl font-bold text-white drop-shadow-sm">
      {title}
    </h2>
  </div>

  <div class="md:flex p-4">
    <div class="text-sm md:text-base text-white/85 w-full">
      <slot />
    </div>
    <div>
      {
        image && (
          <Image class={"max-h-80 max-w-80 object-contain rounded-2xl"} src={image} alt={title} />
        )
      }
    </div>
  </div>
</article>
